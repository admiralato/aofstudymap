<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_gravity="center"
        android:src="@drawable/nazarene_wide_logo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frontpage_studymap_text"
        android:textColor="@color/frontPageStudyMapColor"
        android:textStyle="bold"
        android:textSize="50sp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-12dp"
        android:text="@string/frontPageArticlesOfText"
        android:textColor="@color/frontPageArticlesOfColor"
        android:textStyle="normal"
        android:layout_gravity="center"
        android:textSize="38sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-25dp"
        android:text="@string/frontPageFaithText"
        android:textColor="@color/frontPageArticlesOfColor"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textSize="84sp"/>

    <Button
        android:id="@+id/frontpage_learn_button"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/button_learn"
        android:textSize="25sp"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:textColor="@color/frontPageButtonTextColor"
        android:background="@drawable/roundedbutton"
        android:minHeight="60dip"/>

</LinearLayout>
